""""""""""""For comment""""""""""""""""""""""""""""""""""""""""
"source ~/.vim/vcomments.vim
map <C-a> :call Comment()<CR>
map <C-b> :call Uncomment()<CR>

"Function
function! Comment()
  let ext = tolower(expand('%:e'))
  if ext == 'php' || ext == 'rb' || ext == 'sh' || ext == 'py'
    silent s/\S/\# &/
"    silent s/^/\#/
  elseif ext == 'js' || ext == 'java' || ext == 'c' || ext == 'cpp' || ext == 'go'
    silent s/\S/\/\/ &/
"    silent s:^:\/\/:g
  elseif ext == 'vim'
    silent s:^:\":g
  endif
endfunction

function! Uncomment()
  let ext = tolower(expand('%:e'))
  if ext == 'php' || ext == 'rb' || ext == 'sh' || ext == 'py'
    silent s/\# //1
"    silent s/^\#//
  elseif ext == 'js' || ext == 'java' || ext == 'c' || ext == 'cpp' || ext == 'go'
    silent s/\/\/ //1
"    silent s:^\/\/::g
  elseif ext == 'vim'
    silent s:^\"::g
  endif
endfunction
"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""


